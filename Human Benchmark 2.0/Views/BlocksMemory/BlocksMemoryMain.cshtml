<script src="~/js/JSBlocksMemory.js" asp-append-version="true"></script>
<form>
    <button id="startBtn" onclick="startGame()">Start</button>
    <div id="gameContainer"></div>
    <div id="scoreDiv" hidden disabled>SCORE</div>
    @Html.AntiForgeryToken()
    <button id="saveBtn" type="button" onclick="saveStats()" hidden disabled>Save Score</button>
</form>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fafb;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    #startBtn, #saveBtn {
        padding: 12px 24px;
        font-size: 16px;
        margin: 10px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    #startBtn {
        background-color: #10b981; /* emerald-500 */
        color: white;
    }

        #startBtn:hover {
            background-color: #059669; /* emerald-600 */
            transform: scale(1.05);
        }

    #saveBtn {
        background-color: #3b82f6; /* blue-500 */
        color: white;
    }

        #saveBtn:hover {
            background-color: #2563eb; /* blue-600 */
            transform: scale(1.05);
        }

        #saveBtn:disabled, #startBtn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    #scoreDiv {
        font-size: 20px;
        font-weight: bold;
        color: #374151; /* gray-700 */
        margin: 20px 0;
    }

    #gameContainer {
        margin-top: 20px;
        min-height: 100px;
        width: 100%;
        max-width: 75%;
        padding: 20px;
        background-color: #ffffff;
        border: 2px dashed #d1d5db; /* gray-300 */
        border-radius: 10px;
    }
</style>
